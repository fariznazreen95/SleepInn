{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    "target": "ES2022",                 // stable Node 18+ target
    "module": "ESNext",                 // modern ESM
    "moduleResolution": "bundler",      // << key change: no .js suffixes needed
    "esModuleInterop": true,            // smooth interop with CJS packages
    "allowSyntheticDefaultImports": true,

    // Type Declarations
    "types": ["node"],               // optional; auto-resolves from devDeps
    // "lib": ["esnext"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style / Recommended Options
    "strict": true,
    "jsx": "react-jsx",                 // harmless here, keeps parity with web
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src", "src/types/**/*.d.ts"],   // <-- add this
  "exclude": ["dist", "node_modules"]
}
